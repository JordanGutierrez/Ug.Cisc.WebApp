@model Entidades.Administracion.Proceso

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Master.cshtml";
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Nuevo Proceso</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.PasanteID)
                    @Html.HiddenFor(model => model.TutorID)
                    @Html.HiddenFor(model => model.InstitucionID)

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.PasantiaID, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DropDownList("PasantiaID", new SelectList(ViewBag.Pasantias, "PasantiaID", "Nombre"), "Seleccione Tipo de Pasantía", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Pasantia, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Pasante, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Pasante, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    <span class="input-group-btn">
                                        <button type="button" onclick="MostrarPasantes()" class="btn btn-primary">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.Pasante, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Tutor, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Tutor, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    <span class="input-group-btn">
                                        <button type="button" onclick="MostrarTutores()" class="btn btn-primary">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                    @Html.ValidationMessageFor(model => model.Tutor, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Institucion, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Institucion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    <span class="input-group-btn">
                                        <button type="button" onclick="MostrarInstituciones()" class="btn btn-primary">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                    @Html.ValidationMessageFor(model => model.Tutor, "", new { @class = "text-danger" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Institucion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Departamento, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Departamento, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Departamento, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Supervisor, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Supervisor, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Supervisor, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CorreoSupervisor, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.CorreoSupervisor, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CorreoSupervisor, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CargoSupervisor, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.CargoSupervisor, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CargoSupervisor, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.FechaInicioPasantias, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                <div class="input-group date">
                                    @Html.EditorFor(model => model.FechaInicioPasantias, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    <span class="input-group-addon ">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.FechaInicioPasantias, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.FechaFinPasantias, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                <div class="input-group date">
                                    @Html.EditorFor(model => model.FechaFinPasantias, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    <span class="input-group-addon ">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.FechaFinPasantias, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-6">
                                <button type="submit" class="btn btn-primary">
                                    <span class="glyphicon glyphicon-floppy-disk"></span> Grabar
                                </button>
                            </div>
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Listado de Procesos", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Action("Pasantes", "Pasante")
@Html.Action("Tutores", "Tutor")
@Html.Action("Instituciones", "Institucion")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="../../Scripts/Proceso.js"></script>
}
